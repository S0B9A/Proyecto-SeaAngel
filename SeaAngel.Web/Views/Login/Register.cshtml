@model SeaAngel.Application.DTOs.UsuarioDTO

@{
    ViewData["Title"] = "Register";

    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/styleRegister.css" />

    <style>
        .loading {
            display: inline-block;
            width: 1.5rem;
            height: 1.5rem;
            margin: 0 auto;
            vertical-align: text-bottom;
            border: 0.25em solid currentColor;
            border-right-color: transparent;
            border-radius: 50%;
            animation: spinner-border .75s linear infinite;
            color: white;
        }

        .loadingXXXX {
            display: none;
        }

        #paisSelect option {
            color: #000 !important; 
            background-color: #fff !important; 
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="position-relative">
            <!-- Background decorative elements -->
            <div class="blob blob-1"></div>
            <div class="blob blob-2"></div>
            <div class="blob blob-3"></div>

            <!-- Card -->
            <div class="card">
                <!-- Progress bar -->
                <div class="progress-container">
                    <div class="progress-bar" id="progress-bar"></div>
                </div>

                <div class="card-body">
                    <div class="text-center mb-4" id="form-heading">
                        <h1 class="fs-4 fw-bold mb-2">Información de Usuario</h1>
                        <p class="text-white">Comienza tu viaje con nosotros</p>
                    </div>

                    <form asp-action="Create" id="myForm" data-ajax="true" data-ajax-method="POST" data-ajax-begin="onBegin" data-ajax-failure="onFailure" data-ajax-success="onSuccess"
                          data-ajax-complete="onComplete" asp-antiforgery="true" enctype="multipart/form-data">
                        <!-- Step 1 -->
                        <div class="form-step active" id="step-1">

                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input asp-for="Nombre" class="form-control" placeholder="John Doe" required>
                                    <span asp-validation-for="Nombre" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="mt-4">
                                <button type="button" class="btn btn-primary w-100" onclick="nextStep()">
                                    Continuar <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Step 2 -->
                        <div class="form-step" id="step-2">
                            <div class="mb-3">
                                <label asp-for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-calendar"></i>
                                    </span>
                                    <input asp-for="FechaNacimiento" type="date" class="form-control" required>
                                    <span asp-validation-for="FechaNacimiento" class="invalid-feedback"></span>
                                </div>
                                <div class="form-text">La fecha de nacimiento debe ser menor a 2011</div>
                            </div>


                            <div class="mb-3">
                                <label asp-for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input asp-for="CorreoElectronico" type="email" class="form-control" placeholder="john@example.com" required>
                                    <span asp-validation-for="CorreoElectronico" class="invalid-feedback"></span>
                                </div>
                            </div>

                            <div class="d-flex gap-2 mt-4">
                                <button type="button" class="btn btn-outline-light flex-grow-1" onclick="prevStep()">
                                    Volver
                                </button>
                                <button type="button" class="btn btn-primary flex-grow-1" onclick="nextStep()">
                                    Continuar <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Step 3 -->
                        <div class="form-step" id="step-3">

                            <div class="mb-3">
                                <label asp-for="Pais" class="form-label">País</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-globe"></i>
                                    </span>
                                    <select asp-for="Pais" class="form-select" id="paisSelect" required>
                                        <option value="" selected disabled>Selecciona tu país</option>
                                    </select>
                                    <span asp-validation-for="Pais" class="invalid-feedback"></span>
                                </div>

                            </div>
                            <div class="mb-3">
                                <label asp-for="Telefono" class="form-label">Teléfono</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input asp-for="Telefono" class="form-control" placeholder="+506 0000 0000" required>
                                    <span asp-validation-for="Telefono" class="invalid-feedback"></span>
                                </div>
                                <div class="form-text">El teléfono debe tener al menos 8 dígitos</div>
                            </div>
                            <div class="d-flex gap-2 mt-4">
                                <button type="button" class="btn btn-outline-light flex-grow-1" onclick="prevStep()">
                                    Volver
                                </button>
                                <button type="button" class="btn btn-primary flex-grow-1" onclick="nextStep()">
                                    Continuar <i class="bi bi-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Step 4 -->
                        <div class="form-step" id="step-4">
                            <div class="mb-3">
                                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input asp-for="Contraseña" type="password" id="password" class="form-control" placeholder="••••••••" required>
                                    <button type="button" class="password-toggle" onclick="togglePasswordVisibility('password')">
                                        <i class="bi bi-eye" id="password-toggle-icon"></i>
                                    </button>
                                    <span asp-validation-for="Contraseña" class="invalid-feedback"></span>
                                </div>
                                <div class="form-text">La contraseña debe tener al menos 6 caracteres</div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmarContraseña" class="form-label">Confirmar Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input asp-for="ConfirmarContraseña" type="password" id="confirm-password" class="form-control" placeholder="••••••••" required>
                                    <span asp-validation-for="ConfirmarContraseña" class="invalid-feedback"></span>
                                </div>
                                <div class="invalid-feedback" id="password-match-error" style="display: none;">
                                    Las contraseñas no coinciden
                                </div>
                            </div>

                            <div class="d-flex gap-2 mt-4">
                                <button type="button" class="btn btn-outline-light flex-grow-1" onclick="prevStep()">
                                    Volver
                                </button>
                                <button type="submit" id="submit-button" class="btn btn-primary flex-grow-1" onclick="spinnerEffect()">
                                    <span id="submit-text">Crear Cuenta</span>
                                    <span id="loader" class="loadingXXXX" style="width: 1.5rem; height: 1.5rem;" role="status"></span>
                                </button>
                            </div>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="small text-white">
                            Ya tienes una cuenta?
                            <a href="@Url.Action("Index", "Login")" class="text-gold fw-medium text-decoration-none">
                                Iniciar Sesión
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function spinnerEffect() {
            console.log("spinnerEffect");
            document.getElementById("loginText").style.display = "none";
            document.getElementById("loader").innerHTML = "";
            document.getElementById("loader").className = "loading";
        }

        let currentStep = 1;
        const totalSteps = 4;

        function updateProgressBar() {
            const progressBar = document.getElementById('progress-bar');
            const progressPercentage = (currentStep / totalSteps) * 100;
            progressBar.style.width = `${progressPercentage}%`;
        }

        function updateHeading() {
            const headingElement = document.getElementById('form-heading');
            let title, subtitle;

            switch(currentStep) {
                case 1:
                    title = "Información de Usuario";
                    subtitle = "Comienza tu viaje con nosotros";
                    break;
                case 2:
                    title = "Información de Contacto";
                    subtitle = "Cuéntanos cómo contactarte";
                    break;
                case 3:
                    title = "Información Personal";
                    subtitle = "Cuéntanos un poco sobre ti";
                    break;
                case 4:
                    title = "Seguridad de la Cuenta";
                    subtitle = "Elige una contraseña segura";
                    break;
            }

            headingElement.innerHTML = `
                <h1 class="fs-4 fw-bold mb-2">${title}</h1>
                <p class="text-white">${subtitle}</p>
            `;
        }

        function nextStep() {
            if (currentStep < totalSteps) {
                const currentStepElement = document.getElementById(`step-${currentStep}`);
                const nextStepElement = document.getElementById(`step-${currentStep + 1}`);

                currentStepElement.classList.remove('active');
                currentStepElement.classList.add('slide-out');

                setTimeout(() => {
                    currentStepElement.style.display = 'none';
                    nextStepElement.style.display = 'block';
                    nextStepElement.classList.add('slide-in');

                    currentStep++;
                    updateProgressBar();
                    updateHeading();

                    setTimeout(() => {
                        nextStepElement.classList.remove('slide-in');
                        nextStepElement.classList.add('active');
                    }, 10);
                }, 300);
            }
        }

        function prevStep() {
            if (currentStep > 1) {
                /*const currentStepElement = document.getElementById(`step-${currentStep}`);
                const prevStepElement = document.getElementById(`step-${currentStep - 1}`);

                currentStepElement.classList.remove('active');
                currentStepElement.style.display = 'none';

                prevStepElement.style.display = 'block';
                prevStepElement.classList.add('slide-in');

                currentStep--;
                updateProgressBar();
                updateHeading();

                setTimeout(() => {
                    prevStepElement.classList.remove('slide-in');
                    prevStepElement.classList.add('active');
                }, 10);*/


                const currentStepElement = document.getElementById(`step-${currentStep}`);
                const prevStepElement = document.getElementById(`step-${currentStep - 1}`);

                currentStepElement.classList.remove('active', 'slide-in', 'slide-out');
                currentStepElement.style.display = 'none';

                prevStepElement.style.display = 'block';
                prevStepElement.classList.remove('slide-out'); // por si quedó del paso anterior
                prevStepElement.classList.add('slide-in');

                currentStep--;
                updateProgressBar();
                updateHeading();

                setTimeout(() => {
                    prevStepElement.classList.remove('slide-in');
                    prevStepElement.classList.add('active');
                }, 10);

            }
        }

        function togglePasswordVisibility(inputId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById('password-toggle-icon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }

            // If toggling the main password, also toggle confirm password
            if (inputId === 'password') {
                const confirmPasswordInput = document.getElementById('confirm-password');
                confirmPasswordInput.type = passwordInput.type;
            }
        }

        // Password matching validation
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('confirm-password');
        const passwordMatchError = document.getElementById('password-match-error');
        const submitButton = document.getElementById('submit-button');

        function validatePasswordMatch() {
            /*if (confirmPasswordInput.value && passwordInput.value !== confirmPasswordInput.value) {
                passwordMatchError.style.display = 'block';
                submitButton.disabled = true;
            } else {
                passwordMatchError.style.display = 'none';
                submitButton.disabled = false;
            }*/


        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        const isLengthValid = password.length > 5;
        const doPasswordsMatch = password === confirmPassword;

        if (!isLengthValid) {
            passwordMatchError.textContent = 'La contraseña debe tener más de 5 caracteres.';
            passwordMatchError.style.display = 'block';
            submitButton.disabled = true;
        } else if (confirmPassword && !doPasswordsMatch) {
            passwordMatchError.textContent = 'Las contraseñas no coinciden.';
            passwordMatchError.style.display = 'block';
            submitButton.disabled = true;
        } else {
            passwordMatchError.style.display = 'none';
            submitButton.disabled = false;
        }
        }

        passwordInput.addEventListener('input', validatePasswordMatch);
        confirmPasswordInput.addEventListener('input', validatePasswordMatch);

         // Configure toastr options
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "5000"
        };

        // Initialize progress bar
        updateProgressBar();



    </script>
    <script src="~/js/register.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const paisSelect = document.getElementById('paisSelect');

            fetch('https://restcountries.com/v3.1/all')
                .then(response => response.json())
                .then(countries => {
                    // Ordenar por nombre
                    countries.sort((a, b) => a.name.common.localeCompare(b.name.common));

                    countries.forEach(country => {
                        const name = country.name.common;
                        const prefix = country.idd?.root + (country.idd?.suffixes ? country.idd.suffixes[0] : '');

                        if (prefix && name) {
                            const option = document.createElement('option');
                            option.value = name.toLowerCase();
                            option.textContent = `${name} (${prefix})`;
                            paisSelect.appendChild(option);
                        }
                    });

                    // Agregar una opción "Otros"
                    const otrosOption = document.createElement('option');
                    otrosOption.value = "otros";
                    otrosOption.textContent = "Otros";
                    paisSelect.appendChild(otrosOption);
                })
                .catch(error => {
                    console.error('Error al cargar países:', error);
                });
        });
    </script>

</body>
</html>
