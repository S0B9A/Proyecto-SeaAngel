@model IEnumerable<SeaAngel.Application.DTOs.BarcoDTO>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid p-0">
	<div id="carouselE" class="carousel slide" data-bs-ride="carousel">
		<!-- Indicadores -->
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselE" data-bs-slide-to="0" class="active"
					aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselE" data-bs-slide-to="1"
					aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselE" data-bs-slide-to="2"
					aria-label="Slide 3"></button>
		</div>

		<!-- Contenido del carrusel -->

		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="@Url.Content("~/Images/crucero4.jpg")" class="d-block w-100 carousel-img"
					 alt="Imagen de Electrodomésticos">
				<div class="carousel-caption">
					<h5 class="animate__animated animate__backInLeft">Las mejores experiencias</h5>
					<p>
						Te ofrecemos una variada selección de experiencias a bordo, incluyendo una amplia gama de itinerarios
						en destinos exóticos, así como paquetes completos para disfrutar de vacaciones inolvidables en nuestros lujosos cruceros.
					</p>
					<a href="contacto.html"
					   class="btn btn-warning mt-3 animate__animated animate__backInRight animate__delay-6s">
						Nuestro contacto
					</a>
				</div>
			</div>

			<div class="carousel-item">
				<img src="@Url.Content("~/Images/crucero2.jpg")" class="d-block w-100 carousel-img"
					 alt="Imagen de Servicios">
				<div class="carousel-caption">
					<h5 class="animate__animated animate__backInLeft">Los mejores cruceros</h5>
					<p>
						Nos especializamos en ofrecer experiencias de crucero únicas que transformarán tus vacaciones en un viaje inolvidable.
					</p>
					<a href="contacto.html"
					   class="btn btn-warning mt-3 animate__animated animate__backInRight animate__delay-6s">
						Nuestro contacto
					</a>
				</div>
			</div>

			<div class="carousel-item">
				<img src="@Url.Content("~/Images/costa2.webp")" class="d-block w-100 carousel-img"
					 alt="Imagen de Ofertas">
				<div class="carousel-caption">
					<h5 class="animate__animated animate__backInLeft">Las mejores ofertas</h5>
					<p>
						Aprovecha nuestras ofertas exclusivas en paquetes de cruceros diseñados para mejorar tu experiencia a bordo
					</p>
					<a href="contacto.html"
					   class="btn btn-warning mt-3 animate__animated animate__backInRight animate__delay-6s">
						Nuestro contacto
					</a>
				</div>
			</div>
		</div>

		<!-- Controles de navegación -->
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselE" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>

		<button class="carousel-control-next" type="button" data-bs-target="#carouselE" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	<section class="services">
		<div class="container">
			<div class="d-flex justify-content-center">
				<div class="row justify-content-center">
					<div class="col-12 col-md-6 col-lg-3 mb-3">
						<div class="card text-white text-center bg-barco1 pb-2">
							<div class="card-body">
								<h3 class="card-title">Los mejores barcos</h3>
								<p>
									Contamos con una flota moderna, equipada con tecnología de última generación para tu confort y seguridad.
								</p>
							</div>
						</div>
					</div>

					<div class="col-12 col-md-6 col-lg-3 mb-3">
						<div class="card text-white text-center bg-barco2 pb-2">
							<div class="card-body">
								<h3 class="card-title">Experiencia inigualable</h3>
								<p>
									Disfruta de un viaje de lujo con servicios exclusivos, entretenimiento y gastronomía de primer nivel.
								</p>
							</div>
						</div>
					</div>

					<div class="col-12 col-md-6 col-lg-3 mb-3">
						<div class="card text-white text-center bg-barco3 pb-2">
							<div class="card-body">
								<h3 class="card-title">Comodidad y elegancia</h3>
								<p>
									Nuestras embarcaciones ofrecen cabinas espaciosas, áreas recreativas y un ambiente de total relajación.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="barcos">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-header text-center pb-5">
						<h2 class="text-blue-dark">Barcos</h2>
						<div class="linea-decorativa mx-auto"></div>
					</div>
				</div>
			</div>

			<div class="row justify-content-center">
				@foreach (var barco in Model)
				{
					<div class="col-12 col-md-6 col-lg-3">
						<div class="card bg-light shadow-lg border-0 px-2 py-3 mb-4 hover-animate">
							<div class="text-center">
								<img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(@barco.Imagen)" alt="@barco.Nombre" class="img-fluid rounded" />
							</div>
							<div class="card-body">
								<h5 class="card-title text-blue-dark">@barco.Nombre</h5>
								<p class="parrafo-barco">@barco.Descripcion</p>
								<p class="parrafo-barco">Cantidad de habitaciones: @barco.CantidadHabitaciones</p>
								<a href="@Url.Action("Details", "Barco", new { id = barco.Id })" class="btn btn-blue-dark">Detalle</a>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</section>


</div>