@model SeaAngel.Application.DTOs.BarcoDTO

@{
    ViewData["Title"] = "Detalles del Barco";
}

<div class="container detalleBarco-container">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-darkblue text-white text-center py-4">
            <h2 class="mb-0">Detalles del Barco</h2>
        </div>
        <div class="card-body p-5">
            <div class="row">
                <div class="col-md-6 d-flex flex-column align-items-center mb-4 mb-md-0">
                    @if (Model.Imagen != null && Model.Imagen.Length > 0)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagen)" class="img-fluid rounded-3 shadow-lg" alt="Imagen del barco" style="max-width: 100%; max-height: 400px;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/400x300?text=Sin+Imagen" class="img-fluid rounded-3 shadow-lg" alt="Imagen no disponible">
                    }
                </div>
                <div class="col-md-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item fs-5">
                            <strong class="text-primary">Nombre:</strong> @Model.Nombre
                        </li>
                        <li class="list-group-item fs-5">
                            <strong class="text-primary">Descripción:</strong> @Model.Descripcion
                        </li>
                        <li class="list-group-item fs-5">
                            <strong class="text-primary">Capacidad:</strong> @Model.Capacidad personas
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mt-5">
                <h4 class="mt-12 p-3" style="color: #1E3A8A; background-color: #f5f5f5; border-radius: 8px;">Habitaciones</h4>
                <ul class="list-group">
                    @foreach (var habitacion in Model.BarcoHabitacion)
                    {
                        <li class="list-group-item fs-6 mb-2">
                            <strong>Tipo de Habitación:</strong> @habitacion.IdhabitacionNavigation.Nombre
                            <br>
                            <strong>Descripción:</strong> @habitacion.IdhabitacionNavigation.Descripcion
                            <br>
                            <strong>Tamaño:</strong> @habitacion.IdhabitacionNavigation.TamanoM2 m²
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
