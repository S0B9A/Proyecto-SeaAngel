@model SeaAngel.Application.DTOs.BarcoDTO

@{
    ViewData["Title"] = "Detalles del Barco";
}

<div class="container barco my-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Encabezado -->
        <div class="card-header text-white text-center py-4">
            <h2 class="mb-0 fw-bold" style="color:#1E3A8A;">Detalles del Barco</h2>
            <div class="linea-decorativa mx-auto"></div>
        </div>

        <div class="card-body p-5">
            <div class="row g-5 align-items-center">
                <!-- Imagen del barco -->
                <div class="col-lg-6 d-flex justify-content-center">
                    <div class="image-container rounded-4 shadow-lg overflow-hidden" style="width: 100%; max-width: 500px;">
                        @if (Model.Imagen != null && Model.Imagen.Length > 0)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Imagen)" class="img-fluid w-100 rounded-4" alt="Imagen del barco" style="height: 400px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/500x400?text=Sin+Imagen" class="img-fluid w-100 rounded-4" alt="Imagen no disponible" style="height: 400px; object-fit: cover;">
                        }
                    </div>
                </div>

                <!-- Información del barco -->
                <div class="col-lg-6">
                    <ul class="list-group list-group-flush fs-5">
                        <li class="list-group-item">
                            <strong class="text-primary"><i class="bi bi-ship"></i> Nombre:</strong> @Model.Nombre
                        </li>
                        <li class="list-group-item">
                            <strong class="text-primary"><i class="bi bi-card-text"></i> Descripción:</strong> @Model.Descripcion
                        </li>
                        <li class="list-group-item">
                            <strong class="text-primary"><i class="bi bi-people"></i> Capacidad:</strong> @Model.Capacidad personas
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Habitaciones -->
            <div class="mt-5">
                <h4 class="p-3 text-white fw-bold rounded-3" style="background: #1E3A8A;">Habitaciones</h4>
                <div class="row">
                    @foreach (var habitacion in Model.BarcoHabitacion)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 shadow-sm rounded-3">
                                <div class="card-body">
                                    <h5 class="text-dark">@habitacion.IdhabitacionNavigation.Nombre</h5>
                                    <p class="mb-1"><strong>Descripción:</strong> @habitacion.IdhabitacionNavigation.Descripcion</p>
                                    <p class="mb-0"><strong>Tamaño:</strong> @habitacion.IdhabitacionNavigation.TamanoM2 m²</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
 
    .barco {
        margin-top: 90px !important;
    }

 
</style>