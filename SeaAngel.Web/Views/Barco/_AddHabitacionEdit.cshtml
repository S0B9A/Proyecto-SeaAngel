@model SeaAngel.Application.DTOs.BarcoHabitacionDTO

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-primary shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0">Agregar Habitación</h5>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <!-- Formulario -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Idhabitacion" class="form-label fw-bold text-primary"></label>
                                <input asp-for="Idhabitacion" id="IdhabitacionModal" type="text" class="form-control form-control-sm border-primary shadow-sm" autocomplete="off" />
                                <span asp-validation-for="Idhabitacion" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CantDisponible" class="form-label fw-bold text-primary"></label>
                                <input asp-for="CantDisponible" id="CantDisponibleModal" type="number" class="form-control form-control-sm border-primary shadow-sm" />
                                <span asp-validation-for="CantDisponible" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="button" class="btn btn-primary btn-sm px-4 shadow" onclick="addHabitacion()">
                                    <i class="fas fa-plus"></i> Agregar Habitación
                                </button>
                            </div>
                        </div>

                        <!-- Imagen -->
                        <div class="col-md-6 text-center">
                            <img src="/Images/Logo2.png" class="img-fluid rounded shadow-lg" id="ImgHabitacion" style="max-height: 140px; margin-top: 16px;">
                        </div>
                    </div>

                    <!-- Información seleccionada -->
                    <div class="mt-4">
                        <p id="HabitacionSelect" class="fw-bold text-primary">Habitación: -</p>
                        <p id="DescripcionSelect" class="fw-bold text-primary">Descripción: -</p>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Create" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-arrow-left"></i> Regresar a la Creación de Barco
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
