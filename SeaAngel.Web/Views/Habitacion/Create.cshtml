@model SeaAngel.Application.DTOs.HabitacionDTO

@{
    ViewData["Title"] = "Crear Habitación";
}

<div class="container d-flex justify-content-center align-items-center" style="margin-top: 100px;">
    <div class="card shadow-lg p-4 rounded-3" style="border: 3px solid #FFA500; background-color: #fff; width: 70%;">
        <h2 class="text-center" style="color: #333;">Crear Habitación</h2>
        <hr />
        <form asp-action="Create" id="habitacionForm" data-ajax="true" data-ajax-method="POST" data-ajax-begin="onBegin"
              data-ajax-failure="onFailure" data-ajax-success="onSuccess" data-ajax-complete="onComplete" asp-antiforgery="true" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la habitación" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CapacidadMin" class="form-label fw-bold">Capacidad Mínima</label>
                        <input asp-for="CapacidadMin" class="form-control" type="number" />
                        <span asp-validation-for="CapacidadMin" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CapacidadMax" class="form-label fw-bold">Capacidad Máxima</label>
                        <input asp-for="CapacidadMax" class="form-control" type="number" />
                        <span asp-validation-for="CapacidadMax" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6 d-flex flex-column align-items-center">
                    <div class="form-group mb-3 w-100 mb-5">
                        <label asp-for="TamanoM2" class="form-label fw-bold">Tamaño M²</label>
                        <input asp-for="TamanoM2" class="form-control" type="number" />
                        <span asp-validation-for="TamanoM2" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center w-100">
                        <label asp-for="Foto" class="form-label fw-bold">Imagen</label>
                        <input type="file" class="form-control" id="Foto" name="imageFile" onchange="previewImage()" />
                        <span asp-validation-for="Foto" class="text-danger"></span>
                        <div class="mt-3">
                            <img id="imagePreview" class="img-fluid border rounded shadow-lg" style="max-width: 80%; height: auto; border: 4px solid black; display: none;" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-dark">Regresar</a>
                <input type="submit" value="Crear" class="btn btn-primary" style="background-color: #FFA500; border-color: #FFA500;" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage() {
            var file = document.getElementById('Foto').files[0];
            var reader = new FileReader();
            reader.onloadend = function () {
                var imagePreview = document.getElementById('imagePreview');
                imagePreview.src = reader.result;
                imagePreview.style.display = 'block';
            }
            if (file) {
                reader.readAsDataURL(file);
            }
        }

        function onBegin() { console.log("Inicio de creación"); }
        function onFailure(response) { Swal.fire({ title: "Error!", text: response.responseText, icon: "error" }); }
        function onSuccess(response) {
            Swal.fire({
                icon: "success",
                title: "Habitación Creada",
                showConfirmButton: true
            }).then(() => {
                setTimeout(() => {
                    window.location.href = '@Url.Action("Index", "Habitacion")';
                }, 2000);
            });
        }
        function onComplete() { console.log("Creación completada"); }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
