@model IEnumerable<SeaAngel.Application.DTOs.HabitacionDTO>

@{
    ViewData["Title"] = "Habitaciones";
}

<h1 class="text-center my-4">Habitaciones Disponibles</h1>

<style>
    .card-hover {
        transition: box-shadow 0.3s ease-in-out, transform 0.2s ease-in-out;
    }

        .card-hover:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            transform: translateY(-5px);
        }

    .btn-custom {
        background-color: #E96C12;
        color: white;
        border: none;
    }

        .btn-custom:hover {
            background-color: #d35c0f;
            color: white;
        }
</style>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 mb-4 d-flex align-items-stretch">
                <div class="card card-hover shadow-lg rounded-3 w-100" style="border-left: 5px solid #E96C12; min-height: 200px;">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-primary">@item.Nombre</h5>
                            <p class="card-text text-muted">@item.Descripcion</p>
                            <ul class="list-unstyled">
                                <li><strong>Capacidad Mínima:</strong> @item.CapacidadMin personas</li>
                                <li><strong>Capacidad Máxima:</strong> @item.CapacidadMax personas</li>
                                <li><strong>Tamaño:</strong> @item.TamanoM2 m²</li>
                            </ul>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-custom">Editar</a>
                            <a href="@Url.Action("Details", new { id = item.ID })" class="btn btn-custom">Detalles</a>
                            <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-custom">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
