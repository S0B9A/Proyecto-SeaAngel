@model IEnumerable<SeaAngel.Application.DTOs.HabitacionDTO>

@{
    ViewData["Title"] = "Habitaciones";
}

<style>
    .card-hover {
        transition: box-shadow 0.3s ease-in-out, transform 0.2s ease-in-out;
        cursor: pointer;
        border: none;
        overflow: hidden;
    }

        .card-hover:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            transform: translateY(-5px);
        }

    .linea-decorativa {
        background-color: #E96C12;
        height: 3px;
    }

    .card {
        border-bottom: 3px solid #E96C12;
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .habitacion-img img {
        height: 100%;
        object-fit: cover;
        border-radius: 1px !important;
    }

    /* --- Banner con efecto Parallax --- */
    .banner-img {
        width: 100%;
        height: 400px; /* Altura fija */
        background-image: url("@Url.Content("~/Images/banner-habitacion.png")");
        background-size: cover;
        background-position: center 80%;
        background-attachment: fixed; /* Efecto Parallax */
    }
</style>

<div class="container">
    <!-- Banner -->
    <div class="row">
        <div class="col-12 banner-img text-center"></div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="section-header text-center pb-5 pt-5">
                <h2 class="text-primary">Habitaciones</h2>
                <div class="linea-decorativa mx-auto"></div>
            </div>
        </div>
    </div>

    <div class="mx-2 mx-md-4 mx-lg-5">
        <div class="row pt-5">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6 mb-4">
                    <div class="card card-hover shadow-lg rounded-3 w-100 h-100 d-flex flex-row"
                         onclick="window.location.href='@Url.Action("Details", "Habitacion", new { id = item.ID })'">

                        <!-- Columna de la imagen -->
                        <div class="habitacion-img col-md-5">
                            <img src="data:image/jpeg;charset=utf-8;base64,@Convert.ToBase64String(@item.Foto)"
                                 alt="@item.Nombre" class="card-img w-100 h-100">
                        </div>

                        <!-- Columna de información -->
                        <div class="col-md-7 d-flex flex-column">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title text-primary">@item.Nombre</h5>
                                    <p class="card-text text-muted">@item.Descripcion</p>
                                    <ul class="list-unstyled">
                                        <li><strong>Capacidad Mínima:</strong> @item.CapacidadMin personas</li>
                                        <li><strong>Capacidad Máxima:</strong> @item.CapacidadMax personas</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
