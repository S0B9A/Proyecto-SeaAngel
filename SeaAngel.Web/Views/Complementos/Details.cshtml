@model SeaAngel.Application.DTOs.ComplementosDTO

@{
    ViewData["Title"] = "Detalle de Complemento Premium";
}

<style>
    :root {
        --primary-color: #0a4b78; /* Azul más oscuro */
        --primary-hover: #08355a;
        --accent-color: #e67e22; /* Naranja para acentos */
        --header-gradient: linear-gradient(135deg, #0a4b78, #08355a);
        --light-gray: #f8f9fa;
        --text-muted: #6c757d;
        --border-radius: 8px;
    }

    body {
        background-color: #f5f7fa;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        line-height: 1.6;
        color: #333;
    }

    .detail-container {
        margin: 3% auto;
        max-width: 850px;
        animation: fadeIn 0.5s ease-out;
    }

    .detail-card {
        margin-top: 120px !important;
        border: none;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .detail-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

    .detail-header {
        background: var(--header-gradient);
        color: white;
        padding: 1.5rem 2rem;
        position: relative;
    }

    .detail-title {
        font-weight: 600;
        font-size: 1.8rem;
        margin-bottom: 0.4rem;
        letter-spacing: -0.5px;
    }

    .detail-subtitle {
        font-weight: 400;
        opacity: 0.9;
        font-size: 1rem;
    }

    .price-tag {
        background-color: var(--accent-color);
        color: white;
        font-size: 1.4rem;
        font-weight: 600;
        padding: 0.6rem 1.5rem;
        border-radius: 30px;
        display: inline-block;
        box-shadow: 0 3px 10px rgba(230, 126, 34, 0.3);
        margin: 1rem 0;
    }

    .divider {
        height: 3px;
        width: 60px;
        background: var(--accent-color);
        margin: 1.2rem 0;
        border-radius: 2px;
    }

    .detail-body {
        padding: 2rem;
        background: white;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        margin: 1.5rem 0;
    }

        .feature-list li {
            padding: 0.8rem 0;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            align-items: center;
        }

            .feature-list li:last-child {
                border-bottom: none;
            }

    .feature-icon {
        color: var(--accent-color);
        margin-right: 1rem;
        font-size: 1rem;
        width: 24px;
        text-align: center;
    }

    .btn-premium {
        background: var(--accent-color);
        border: none;
        padding: 0.7rem 1.8rem;
        font-weight: 500;
        letter-spacing: 0.3px;
        border-radius: var(--border-radius);
        transition: all 0.2s ease;
        box-shadow: 0 3px 10px rgba(230, 126, 34, 0.3);
        font-size: 0.9rem;
    }

        .btn-premium:hover {
            background: #d35400;
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(230, 126, 34, 0.4);
        }

    .btn-outline-premium {
        border: 1px solid var(--accent-color);
        color: var(--accent-color);
        background: transparent;
        padding: 0.6rem 1.5rem;
        font-weight: 500;
        border-radius: var(--border-radius);
        transition: all 0.2s ease;
        font-size: 0.9rem;
    }

        .btn-outline-premium:hover {
            background: var(--accent-color);
            color: white;
        }

    .badge-premium {
        background-color: rgba(230, 126, 34, 0.1);
        color: var(--accent-color);
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-weight: 500;
        font-size: 0.8rem;
        margin-left: 0.5rem;
    }

    .lead {
        font-size: 1.05rem;
        color: var(--text-muted);
        line-height: 1.7;
    }

    @@media (max-width: 768px) {
        .detail-title {
            font-size: 1.5rem;
        }

        .detail-container {
            margin: 1.5rem auto;
            padding: 0 1rem;
        }

        .detail-header {
            padding: 1.2rem 1.5rem;
        }

        .detail-body {
            padding: 1.5rem;
        }
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<!-- Incluir Font Awesome para iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<!-- Incluir Inter font de Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="detail-container mt-5">
    <div class="detail-card">
        <div class="detail-header">
            <h1 class="detail-title">@Model.Nombre</h1>
            <p class="detail-subtitle">Complemento premium para tu experiencia</p>
        </div>

        <div class="detail-body">
            <div class="price-tag">
                $@Model.Precio.ToString("N2")
            </div>

            <div class="divider"></div>

            <p class="lead">@Model.Descripcion</p>

            <div class="mt-4 mb-4">
                <h5 class="mb-3" style="font-weight: 600; color: var(--primary-color);">
                    <i class="fas fa-star me-2" style="color: var(--accent-color);"></i> Características principales
                </h5>

                <ul class="feature-list">
                    <li>
                        <span class="feature-icon"><i class="fas fa-check-circle"></i></span>
                        <div>
                            <span style="font-weight: 500;">Aplicación:</span>
                            <span class="badge-premium">@Model.Aplicacion</span>
                        </div>
                    </li>
                    <li>
                        <span class="feature-icon"><i class="fas fa-tag"></i></span>
                        <div>
                            <span style="font-weight: 500;">Categoría:</span>
                            <span style="color: var(--text-muted);">Complemento premium</span>
                        </div>
                    </li>
                    <li>
                        <span class="feature-icon"><i class="fas fa-bolt"></i></span>
                        <div>
                            <span style="font-weight: 500;">Disponibilidad:</span>
                            <span style="color: var(--text-muted);">Inmediata</span>
                        </div>
                    </li>
                </ul>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center pt-2">
                <a asp-action="Mantenimiento" class="btn btn-outline-premium">
                    <i class="fas fa-arrow-left me-2"></i>Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>