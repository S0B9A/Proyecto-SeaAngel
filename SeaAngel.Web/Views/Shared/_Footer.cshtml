<style>
    /* Diseño Footer Profesional - SeaAngel */
    .pro-footer {
        background-color: white;
        font-family: 'Arial', 'Helvetica Neue', sans-serif;
        padding: 60px 0 30px;
        color: #1A3C5C; /* Azul rey profundo */
    }

    .pro-footer-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 30px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .pro-footer-column {
        position: relative;
        padding-bottom: 20px;
    }

        .pro-footer-column::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 50px;
            height: 2px;
            background-color: #2E72B5; /* Azul rey acento */
        }

    .pro-footer-title {
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        margin-bottom: 20px;
        color: #1A3C5C;
        font-size: 16px;
    }

    .pro-footer-links {
        list-style: none;
        padding: 0;
    }

        .pro-footer-links li {
            margin-bottom: 12px;
        }

        .pro-footer-links a {
            color: #4A6F8F;
            text-decoration: none;
            transition: color 0.3s ease;
            font-weight: 500;
        }

            .pro-footer-links a:hover {
                color: #2E72B5;
            }

    .pro-social-icons {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

        .pro-social-icons a {
            color: #1A3C5C;
            font-size: 24px;
            transition: transform 0.3s ease, color 0.3s ease;
        }

            .pro-social-icons a:hover {
                color: #2E72B5;
                transform: scale(1.2);
            }

    .pro-footer-bottom {
        text-align: center;
        padding-top: 40px;
        border-top: 1px solid #E1E6EB;
        margin-top: 30px;
        color: #5A7491;
        font-size: 14px;
    }

        .pro-footer-bottom a {
            color: #1A3C5C;
            text-decoration: none;
            margin-left: 10px;
        }

</style>

<div class="pro-footer">
    <div class="pro-footer-grid">
        <!-- Columna Nosotros -->
        <div class="pro-footer-column">
            <h4 class="pro-footer-title">Nosotros</h4>
            <ul class="pro-footer-links">
                <li><a asp-controller="Home" asp-action="About">Nuestra información</a></li>
                <li><a asp-controller="Home" asp-action="Diferenciales">Nuestros diferenciales</a></li>
                <li><a asp-controller="Servicios" asp-action="Index">Nuestros servicios</a></li>
            </ul>
        </div>

        <!-- Columna Contacto -->
        <div class="pro-footer-column">
            <h4 class="pro-footer-title">Contacto</h4>
            <ul class="pro-footer-links">
                <li><a asp-controller="Contact" asp-action="Index">Contáctenos</a></li>
                <li><a asp-controller="Home" asp-action="FAQ">Preguntas frecuentes</a></li>
                <li><a asp-controller="Contact" asp-action="Index">Mapa del sitio</a></li>
            </ul>
        </div>

        <!-- Columna Productos -->
        <div class="pro-footer-column">
            <h4 class="pro-footer-title">Ofrecemos</h4>
            <ul class="pro-footer-links">
                <li><a asp-controller="Barco" asp-action="Index">Nuestros Barcos</a></li>
                <li><a asp-controller="Crucero" asp-action="Index">Nuestros Cruceros</a></li>
                <li><a asp-controller="Habitacion" asp-action="Index">Nuestras Habitaciones</a></li>
            </ul>
        </div>

        <!-- Columna Redes Sociales -->
        <div class="pro-footer-column">
            <h4 class="pro-footer-title">Redes Sociales</h4>
            <div class="pro-social-icons">
                <a href="https://www.facebook.com/sebas.ariasvargas.1/" target="_blank"><i class="fab fa-facebook-f"></i></a>
                <a href="https://wa.me/87133971" target="_blank"><i class="fab fa-whatsapp"></i></a>
                <a href="https://www.instagram.com/sba0_09" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>

    <!-- Copyright -->
    <div class="pro-footer-bottom">
        © @DateTime.Now.Year SeaAngel.Web
        <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
    </div>
</div>