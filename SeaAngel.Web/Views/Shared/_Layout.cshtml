<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeaAngel.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SeaAngel.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!--SweetAlert-->
    <link rel="stylesheet" href="~/css/sweetalert2.min.css" asp-append-version="true" />
    <!-- Multi-select -->
    @* https://davidstutz.github.io/bootstrap-multiselect/ *@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/css/bootstrap-multiselect.css" rel="stylesheet" />
    <!--JQuery UI CSS-->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

</head>

<body>
    <header>
        @await Html.PartialAsync("_Menu")
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-white pt-5 pb-4" style="background-color: #0A1931;">
        <div class="container text-center text-md-start">
            <div class="row text-center text-md-start">

                <!-- Sección Nosotros -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3" data-aos="fade-up">
                    <h5 class="text-uppercase font-weight-bold">Nosotros</h5>
                    <hr class="mb-4">
                    <p><a asp-controller="Home" asp-action="About" class="text-white text-decoration-none">Nuestra información</a></p>
                    <p><a asp-controller="Home" asp-action="Diferenciales" class="text-white text-decoration-none">Nuestros diferenciales</a></p>
                    <p><a asp-controller="Servicios" asp-action="Index" class="text-white text-decoration-none">Nuestros servicios</a></p>
                </div>

                <!-- Sección Contacto -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3" data-aos="fade-up" data-aos-delay="100">
                    <h5 class="text-uppercase font-weight-bold">Contacto</h5>
                    <hr class="mb-4">
                    <p><a asp-controller="Contact" asp-action="Index" class="text-white text-decoration-none">Contáctenos</a></p>
                    <p><a asp-controller="Home" asp-action="FAQ" class="text-white text-decoration-none">Preguntas frecuentes</a></p>
                    <p><a asp-controller="Contact" asp-action="Index" class="text-white text-decoration-none">Mapa</a></p>
                </div>

                <!-- Sección Productos -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3" data-aos="fade-up" data-aos-delay="200">
                    <h5 class="text-uppercase font-weight-bold">Ofrecemos</h5>
                    <hr class="mb-4">
                    <p><a asp-controller="Barco" asp-action="Index" class="text-white text-decoration-none">Nuestros Barcos</a></p>
                    <p><a asp-controller="Crucero" asp-action="Index" class="text-white text-decoration-none">Nuestros Cruceros</a></p>
                    <p><a asp-controller="Habitacion" asp-action="Index" class="text-white text-decoration-none">Nuestas Habitaciones</a></p>
                </div>

                <!-- Sección Redes Sociales -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3" data-aos="fade-up" data-aos-delay="300">
                    <h5 class="text-uppercase font-weight-bold">Redes Sociales</h5>
                    <hr class="mb-4">
                    <ul class="list-unstyled list-inline">
                        <li class="list-inline-item"><a href="https://www.facebook.com/sebas.ariasvargas.1/?locale=es_ES" class="text-white"><i class="fab fa-facebook-f"></i></a></li>
                        <li class="list-inline-item"><a href="https://wa.me/87133971" class="text-white"><i class="fa-brands fa-whatsapp whatsapp-icon"></i></a></li>
                        <li class="list-inline-item"><a href="https://www.instagram.com/sba0_09?igsh=MXYwYnhzcmU4MTg4Zg==" class="text-white"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>

            </div>

            <!-- Copyright -->
            <div class="text-center pt-3">
                &copy; @DateTime.Now.Year - SeaAngel.Web - <a asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!--SweetAlert-->
    <script src="~/js/sweetalert2.all.min.js" asp-append-version="true"></script>
    <!-- Ajax unobtrusive-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"
            integrity="sha512-f04GBpoqEZhbyjlRTuXeg8FIHDb+xfCJ0LVdqiN1fEl5B3jz3Z0SPe9IxDumOVdTeeXmKMcMJhb26VuGf1Laqw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- Multi-select -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/js/bootstrap-multiselect.min.js"></script>
    <!-- JQuery UI Autocomplete -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (ViewBag.NotificationMessage != null)
    {
        <script>

            @Html.Raw(@ViewBag.NotificationMessage);
        </script>
    }

</body>

</html>
