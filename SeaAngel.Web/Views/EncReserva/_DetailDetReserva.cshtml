@model IEnumerable<SeaAngel.Application.DTOs.DetReservaDTO>

<style>
    #myCard {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        border-radius: 10px;
        overflow: hidden;
        margin: 20px 0;
    }

    .card {
        border: none;
        background: white;
    }

    .card-header {
        background: linear-gradient(135deg, #1e88e5 0%, #0d47a1 100%);
        color: white;
        font-size: 1.2rem;
        font-weight: 600;
        padding: 15px 20px;
        border-bottom: none;
    }

    .table-responsive {
        border-radius: 0 0 8px 8px;
        overflow: hidden;
    }

    #detalleFactura {
        margin-bottom: 0;
    }

        #detalleFactura thead {
            background-color: #f8f9fa;
            color: #0d47a1;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        #detalleFactura th {
            border-bottom: 2px solid #dee2e6;
            padding: 12px 8px;
            vertical-align: middle;
        }

        #detalleFactura td {
            padding: 12px 8px;
            vertical-align: middle;
            border-top: 1px solid #e9ecef;
        }

        #detalleFactura tbody tr:hover {
            background-color: rgba(30, 136, 229, 0.05);
            transition: background-color 0.2s ease;
        }

    .btn-danger {
        background-color: #e53935;
        border: none;
        border-radius: 4px;
        padding: 6px 12px;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .btn-danger:hover {
            background-color: #c62828;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

    .table-bordered {
        border: 1px solid #e9ecef;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.02);
    }
</style>

<div id="myCard">
    <div class="card">
        <div class="card-header">
            <i class="fas fa-list-alt mr-2"></i> Detalle de Reserva
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center" id="detalleFactura">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Idhabitacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreHabitacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CantidadPasajeros)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Precio)
                            </th>
							<th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @{
                            if (Model != null)
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Idhabitacion)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.NombreHabitacion)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.CantidadPasajeros)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Precio)
                                        </td>
                                        <td align="center">
                                            <button type="button" class="btn btn-danger" onclick="deleteHabitacion(@item.Idhabitacion, @item.CantidadPasajeros)">
                                                <i class="fas fa-trash-alt mr-1"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>