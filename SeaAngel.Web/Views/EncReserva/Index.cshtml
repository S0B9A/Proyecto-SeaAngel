@model IEnumerable<SeaAngel.Application.DTOs.EncReservaDTO>
@{
    ViewData["Title"] = "Cruise Reservations";
}
@{
    // Intentamos obtener la fecha del querystring
    var fechaInicioRaw = Context.Request.Query["fechaInicio"].ToString();
    string fechaInicioValor = "";

    if (DateTime.TryParse(fechaInicioRaw, out DateTime fechaInicioDate))
    {
        // Convertimos al formato requerido por input type="date"
        fechaInicioValor = fechaInicioDate.ToString("dd/MM/yyyy");
    }
}


