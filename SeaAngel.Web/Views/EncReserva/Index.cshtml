    <div class="container py-5">
        <!-- Encabezado con animación y decoración naval -->

        <div class="header-section mb-5 mt-5 animate__animated animate__fadeIn">
            <div class="d-flex align-items-center justify-content-center mb-2">
                <div class="anchor-decoration"><i class="fas fa-clipboard-list"></i></div>
                <h1 class="text-center mx-4 mb-0">Reservaciones</h1>
                <div class="anchor-decoration"><i class="fas fa-clipboard-list"></i></div>
            </div>
            <div class="compass-divider">
                <i class="fas fa-compass compass-icon"></i>
            </div>
        </div>

        <div class="stats-container mb-5 animate__animated animate__fadeInUp">
            <div class="stat-box">
                <div class="stat-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="stat-info">
                    <h3 class="stat-count">@Model.Count()</h3>
                    <p class="stat-label">Total de reservas</p>
                </div>
            </div>
        </div>


        <form method="get" class="fecha-filter-form">
            <div class="fecha-filter-container">
                <label for="fechaInicio" class="fecha-filter-label">
                    <i class="fas fa-filter"></i> Filtrar desde:
                </label>

                <div class="fecha-input-wrapper">
                    <i class="fas fa-calendar-alt fecha-icon"></i>
                    <input type="text"
                           name="fechaInicio"
                           id="fechaInicio"
                           class="fecha-input"
                           placeholder="dd/mm/aaaa"
                           value="@fechaInicioValor"
                           pattern="\d{2}/\d{2}/\d{4}"
                           title="Por favor ingrese una fecha en formato dd/mm/aaaa" />
                </div>

                <button type="submit" class="fecha-filter-btn">
                    <i class="fas fa-search"></i>
                    <span>Filtrar</span>
                </button>
            </div>
        </form>

        <div class="row barcos-container mx-5" id="barcosGrid">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 mb-4 barco-item" data-nombre="@item.IdusuarioNavigation.Nombre.ToLower()">
                    <div class="card barco-card">
                        <div class="card-wave"></div>
                        <div class="card-header">
                            <div class="header-icon">
                                <i class="fas fa-clipboard-list"></i>
                            </div>
                            <h5 class="card-title">@item.IdusuarioNavigation.Nombre</h5>
                        </div>
                        <div class="card-body">
                            <div class="info-row">
                                <div class="info-label"><i class="fas fa-info-circle"></i> Estado:</div>
                                <div class="info-value">@item.Estado</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label"><i class="fas fa-users"></i> Cantidad de pasajeros:</div>
                                <div class="info-value capacity-badge">@item.CantidadDePasajeros pasajeros</div>
                            </div>
                            <div class="info-row">
                                <div class="info-label"><i class="fas fa-users"></i> Fecha de creacion:</div>
                                <div class="info-value capacity-badge">
                                    @(item.FechaCreacion.HasValue
                                        ? item.FechaCreacion.Value.ToString("dd/MM/yyyy")
                                        : "N/A")
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-label"><i class="fas fa-ruler-combined"></i> Fecha de pago:</div>
                                <div class="info-value capacity-badge">
                                    @(item.FechaPago.HasValue
                                        ? item.FechaPago.Value.ToString("dd/MM/yyyy")
                                        : "N/A")
                                </div>
                            </div>
                            <div class="card-actions">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn-card btn-details">
                                    <i class="fas fa-eye"></i>
                                    <span>Detalles</span>
                                </a>
                            </div>

                            @if (item.Estado == "Pendiente")
                            {
                                <a asp-action="Tarjeta" asp-route-id="@item.Id" class="btn-card btn-create mt-2">
                                    <i class="fas fa-credit-card"></i>
                                    <span>Finalizar Pago</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

