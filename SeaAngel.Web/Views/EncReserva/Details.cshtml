@model SeaAngel.Application.DTOs.EncReservaDTO

@{
    ViewData["Title"] = "Factura";
}

<div class="container factura my-5">
    <div class="invoice border rounded p-5 bg-white shadow-lg">
        <!-- ENCABEZADO MEJORADO -->
        <div class="text-center mb-5">
            <div class="d-flex justify-content-center align-items-center mb-3">
                <div class="header-line bg-primary"></div>
                <h2 class="fw-bold text-uppercase text-primary mx-3 mb-0">Factura de Reserva</h2>
                <div class="header-line bg-primary"></div>
            </div>
            <p class="text-muted fs-5">Gracias por elegir SeaAngel Cruceros</p>
            <img src="https://via.placeholder.com/200x60?text=SeaAngel" alt="Logo SeaAngel" class="img-fluid mb-3" style="max-height: 60px;">
        </div>

        <!-- DATOS DEL CLIENTE Y FACTURA - MEJORADO -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card p-4 border-0 shadow-sm h-100" style="border-left: 4px solid #4b86b4;">
                    <h5 class="fw-bold text-secondary mb-4 d-flex align-items-center">
                        <i class="fas fa-user-circle me-2 text-primary"></i>Datos del Cliente
                    </h5>
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 100px;">Nombre:</span>
                        <span>@Model.IdusuarioNavigation.Nombre</span>
                    </div>
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 100px;">Teléfono:</span>
                        <span>@Model.IdusuarioNavigation.Telefono</span>
                    </div>
                    <div class="d-flex">
                        <span class="fw-semibold me-2" style="min-width: 100px;">Correo:</span>
                        <span>@Model.IdusuarioNavigation.CorreoElectronico</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card p-4 border-0 shadow-sm h-100" style="border-left: 4px solid #4b86b4;">
                    <h5 class="fw-bold text-secondary mb-4 d-flex align-items-center">
                        <i class="fas fa-file-invoice me-2 text-primary"></i>Detalles de la Factura
                    </h5>
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 120px;">#Reserva:</span>
                        <span class="fw-bold">@Model.Id</span>
                    </div>
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 120px;">Fecha:</span>
                        <span>@(Model.FechaCreacion?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                    </div>
                    @if (Model.Estado == "Pendiente")
                    {
                        <div class="alert alert-warning mt-3 d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div>
                                <p class="mb-1"><strong>Estado de Pago:</strong> Pendiente</p>
                                <p class="mb-0"><strong>Fecha límite:</strong> @(Model.FechaPago?.ToString("dd/MM/yyyy") ?? "N/A")</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center mt-3">
                            <span class="fw-semibold me-2" style="min-width: 120px;">Estado:</span>
                            <span class="badge bg-success py-2 px-3">
                                <i class="fas fa-check-circle me-1"></i>@Model.Estado
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- INFORMACIÓN DEL CRUCERO - MEJORADO -->
        <div class="card p-4 mt-4 border-0 shadow-sm" style="border-left: 4px solid #4b86b4;">
            <h5 class="fw-bold text-secondary mb-4 d-flex align-items-center">
                <i class="fas fa-ship me-2 text-primary"></i>Datos del Crucero
            </h5>
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 140px;">Nombre:</span>
                        <span>@Model.IdfechaNavigation.IdcruceroNavigation.Nombre</span>
                    </div>
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 140px;">Fecha Inicio:</span>
                        <span>@Model.IdfechaNavigation.FechaInicio?.ToString("dd/MM/yyyy")</span>
                    </div>
                    <div class="d-flex mb-3">
                        <span class="fw-semibold me-2" style="min-width: 140px;">Duración:</span>
                        <span>@Model.IdfechaNavigation.IdcruceroNavigation.CantDias días</span>
                    </div>
                    <div class="d-flex">
                        <span class="fw-semibold me-2" style="min-width: 140px;">Fecha Fin:</span>
                        <span>@(Model.IdfechaNavigation.FechaInicio?.AddDays(Model.IdfechaNavigation.IdcruceroNavigation.CantDias).ToString("dd/MM/yyyy") ?? "N/A")</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5 class="fw-bold text-secondary mb-3 d-flex align-items-center">
                        <i class="fas fa-map-marked-alt me-2 text-primary"></i>Itinerario
                    </h5>
                    <div class="itinerary-container">
                        @foreach (var itinerario in Model.IdfechaNavigation.IdcruceroNavigation.Itinerario)
                        {
                            <div class="itinerary-item mb-3 pb-3 border-bottom">
                                <div class="d-flex align-items-center mb-1">
                                    <span class="badge bg-primary me-2">Día @itinerario.Dia</span>
                                    <strong>@itinerario.IdpuertoNavigation.Nombre</strong>
                                </div>
                                <p class="mb-0">@itinerario.Descripcion</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- TABLA DE COMPLEMENTOS - MEJORADA -->
        <div class="card p-4 mt-4 border-0 shadow-sm" style="border-left: 4px solid #4b86b4;">
            <h5 class="fw-bold text-secondary mb-4 d-flex align-items-center">
                <i class="fas fa-concierge-bell me-2 text-primary"></i>Complementos Adicionales
            </h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="text-start">Servicio</th>
                            <th class="text-end">Precio Unitario</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var complemento in Model.ReservaComplementos)
                        {
                            <tr>
                                <td class="text-start">@complemento.IdcomplementoNavigation.Nombre</td>
                                <td class="text-end">$@complemento.Precio.ToString("N2")</td>
                                <td class="text-center">@complemento.Cantidad</td>
                                <td class="text-end">$@((complemento.Precio * complemento.Cantidad).ToString("N2"))</td>
                            </tr>
                        }
                        @if (!Model.ReservaComplementos.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">No se han seleccionado complementos adicionales</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- DETALLES DEL PAGO - MEJORADO -->
        <div class="card p-4 mt-4 border-0 shadow-sm" style="border-left: 4px solid #4b86b4;">
            <h5 class="fw-bold text-secondary mb-4 d-flex align-items-center">
                <i class="fas fa-money-bill-wave me-2 text-primary"></i>Detalles del Pago
            </h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="text-center">Pasajeros</th>
                            <th class="text-center">Camarotes</th>
                            <th class="text-end">Precio/Camarote</th>
                            <th class="text-end">Subtotal</th>
                            <th class="text-end">Impuesto</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">@Model.CantidadDePasajeros</td>
                            <td class="text-center">@Model.CantidadDeCamarotes</td>
                            <td class="text-end">$@Model.PrecioTotalCamorotes.ToString()</td>
                            <td class="text-end">$@Model.Subtotal.ToString()</td>
                            <td class="text-end">$@Model.Impuesto.ToString()</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- SECCIÓN DEL TOTAL FINAL - MEJORADA -->
        <div class="total-section text-center my-5 p-4 bg-light rounded">
            <h4 class="fw-bold text-uppercase mb-3">Total a Pagar</h4>
            <p class="display-5 fw-bold text-primary">$@Model.PrecioTotal.ToString()</p>
            @if (Model.Estado == "Pendiente")
            {
                <p class="text-muted mt-2">
                    <i class="fas fa-info-circle me-1"></i> El pago debe realizarse antes de la fecha límite indicada
                </p>
            }
        </div>

        <!-- BOTÓN PARA IMPRIMIR - MEJORADO -->
        <div class="text-center mt-4">
            <a class="btn btn-primary btn-lg px-4 py-2" asp-action="GenerarPDF" asp-route-id="@Model.Id">
                <i class="fas fa-download me-2"></i>Descargar factura PDF
            </a>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .factura {
        margin-top: 50px;
    }

    .invoice {
        max-width: 1000px;
        margin: auto;
        border: 1px solid #dee2e6;
    }

    .header-line {
        height: 2px;
        width: 50px;
    }

    .card {
        border-radius: 8px;
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .badge {
        font-size: 0.85rem;
        font-weight: 500;
        padding: 0.35rem 0.75rem;
    }

    .total-section {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-top: 4px solid #4b86b4;
    }

    .itinerary-container {
        max-height: 300px;
        overflow-y: auto;
        padding-right: 10px;
    }

    .itinerary-item:last-child {
        border-bottom: none !important;
        margin-bottom: 0 !important;
        padding-bottom: 0 !important;
    }

    .alert-warning {
        background-color: rgba(255, 193, 7, 0.15);
        border-left: 4px solid #ffc107;
    }

    @@media (max-width: 768px) {
        .invoice {
            padding: 20px !important;
        }

        .display-5 {
            font-size: 2.5rem;
        }
    }
</style>

<!-- Incluir Font Awesome para los iconos -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">