@model SeaAngel.Application.DTOs.EncReservaDTO

@{
    ViewData["Title"] = "Details";
}

<div class="invoice-container">
    <div class="invoice-document">
        <!-- HEADER SECTION -->
        <header class="invoice-header">
            <div class="logo-container">
                <img src="@Url.Content("~/Images/Logo-Azul.png")" alt="Logo SeaAngel" class="logo">
            </div>
            <div class="invoice-title">
                <h1>Factura</h1>
                <div class="invoice-number">#@Model.Id</div>
            </div>
        </header>

        <!-- STATUS BAR -->
        <div class="status-bar @(Model.Estado == "Pagado" ? "status-paid" : "status-pending")">
            <div class="status-icon">
                <i class="bi @(Model.Estado == "Pagado" ? "bi-check-circle-fill" : "bi-clock")"></i>
            </div>
            <div class="status-text">
                <span>Estado: @Model.Estado</span>
                @if (Model.Estado == "Pendiente")
                {
                    <span>Fecha límite: @(Model.IdfechaNavigation.FechaLimitePago?.ToString("dd/MM/yyyy") ?? "N/A")</span>
                }
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <div class="invoice-body">
            <!-- TWO COLUMN SECTION: CUSTOMER AND CRUISE INFO -->
            <div class="info-columns">
                <!-- CUSTOMER INFO -->
                <section class="info-column">
                    <div class="info-card">
                        <div class="info-card-header">
                            <i class="bi bi-person"></i>
                            <h2>Cliente</h2>
                        </div>
                        <div class="info-card-body">
                            <div class="info-item">
                                <span class="info-label">Nombre:</span>
                                <span class="info-value">@Model.IdusuarioNavigation.Nombre</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Teléfono:</span>
                                <span class="info-value">@Model.IdusuarioNavigation.Telefono</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Correo:</span>
                                <span class="info-value">@Model.IdusuarioNavigation.CorreoElectronico</span>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- CRUISE INFO -->
                <section class="info-column">
                    <div class="info-card">
                        <div class="info-card-header">
                            <i class="bi bi-ship"></i>
                            <h2>Crucero</h2>
                        </div>
                        <div class="info-card-body">
                            <div class="info-item">
                                <span class="info-label">Nombre:</span>
                                <span class="info-value">@Model.IdfechaNavigation.IdcruceroNavigation.Nombre</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Inicio:</span>
                                <span class="info-value">@Model.IdfechaNavigation.FechaInicio?.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Duración:</span>
                                <span class="info-value">@Model.IdfechaNavigation.IdcruceroNavigation.CantDias días</span>
                            </div>
                            <div class="info-item">
                                <span class="info-label">Fin:</span>
                                <span class="info-value">@(Model.IdfechaNavigation.FechaInicio?.AddDays(Model.IdfechaNavigation.IdcruceroNavigation.CantDias).ToString("dd/MM/yyyy") ?? "N/A")</span>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <!-- ITINERARY SECTION -->
            <section class="itinerary-section">
                <div class="section-header">
                    <i class="bi bi-map"></i>
                    <h2>Itinerario</h2>
                </div>
                <div class="itinerary-timeline">
                    @foreach (var itinerario in Model.IdfechaNavigation.IdcruceroNavigation.Itinerario)
                    {
                        <div class="timeline-item">
                            <div class="timeline-marker">
                                <span class="day-number">@itinerario.Dia</span>
                            </div>
                            <div class="timeline-content">
                                <h3 class="port-name">@itinerario.IdpuertoNavigation.Nombre</h3>
                                <p class="port-description">@itinerario.Descripcion</p>
                            </div>
                        </div>
                    }
                </div>
            </section>

            <!-- COMPLEMENTOS SECTION -->
            <section class="complements-section">
                <div class="section-header">
                    <i class="bi bi-plus-circle"></i>
                    <h2>Complementos</h2>
                </div>

                @if (Model.ReservaComplementos.Any())
                {
                    <div class="complements-grid">
                        @foreach (var complemento in Model.ReservaComplementos)
                        {
                            <div class="complement-card">
                                <div class="complement-icon">
                                    <i class="bi bi-star"></i>
                                </div>
                                <div class="complement-details">
                                    <h3>@complemento.IdcomplementoNavigation.Nombre</h3>
                                    <div class="complement-meta">
                                        <span class="complement-quantity">Cantidad: @complemento.Cantidad</span>
                                        <span class="complement-price">$@complemento.Precio.ToString("N2")</span>
                                    </div>
                                    <div class="complement-total">
                                        <span>Total:</span>
                                        <span>$@((complemento.Precio * complemento.Cantidad).ToString("N2"))</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-complements">
                        <i class="bi bi-info-circle"></i>
                        <p>No se han seleccionado complementos adicionales</p>
                    </div>
                }
            </section>

            <!-- PAYMENT DETAILS SECTION -->
            <section class="payment-details">
                <div class="section-header">
                    <i class="bi bi-credit-card"></i>
                    <h2>Detalles del Pago</h2>
                </div>

                <div class="payment-summary">
                    <div class="summary-row">
                        <div class="summary-item">
                            <span class="summary-label">Pasajeros</span>
                            <span class="summary-value">@Model.CantidadDePasajeros</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Camarotes</span>
                            <span class="summary-value">@Model.CantidadDeCamarotes</span>
                        </div>
                        <div class="summary-item">
                            <span class="summary-label">Precio/Camarote</span>
                            <span class="summary-value">$@Model.PrecioTotalCamorotes.ToString()</span>
                        </div>
                    </div>

                    <div class="calculation-row">
                        <div class="calculation-item">
                            <span class="calculation-label">Subtotal</span>
                            <span class="calculation-value">$@Model.Subtotal.ToString()</span>
                        </div>
                        <div class="calculation-item">
                            <span class="calculation-label">Impuesto</span>
                            <span class="calculation-value">$@Model.Impuesto.ToString()</span>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- TOTAL SECTION -->
        <div class="total-section">
            <div class="total-container d-flex">
                <div class="total-row me-5">
                    <span class="total-label">Monto Total</span>
                    <span class="total-value">$@Model.PrecioTotal.ToString()</span>
                </div>

                <div class="total-row">
                    <span class="total-label">Monto Pendiente</span>
                    <span class="total-value">$@Model.PrecioPendiente.ToString()</span>
                </div>
            </div>

            @if (Model.Estado == "Pendiente")
            {
                <div class="payment-notice">
                    <i class="bi bi-exclamation-triangle"></i>
                    <p>El pago debe realizarse antes de la fecha límite: @Model.IdfechaNavigation.FechaLimitePago?.ToString("dd/MM/yyyy")</p>
                </div>
            }
        </div>

        <!-- ACTIONS SECTION -->
        <div class="actions-section">
            @if (Model.Estado == "Pendiente")
            {
                <a class="action-button payment-button" asp-action="Tarjeta" asp-route-id="@Model.Id">
                    <i class="bi bi-credit-card"></i>
                    <span>Pagar Factura</span>
                </a>
            }
            else
            {
                <a class="action-button download-button" asp-action="GenerarPDF" asp-route-id="@Model.Id">
                    <i class="bi bi-download"></i>
                    <span>Descargar PDF</span>
                </a>
            }
        </div>

        <!-- FOOTER -->
        <footer class="invoice-footer">
            <div class="footer-logo">
                <span>SeaAngel Cruceros</span>
            </div>
            <div class="footer-text">
                <p>Gracias por elegir nuestros servicios</p>
            </div>
        </footer>
    </div>
</div>

