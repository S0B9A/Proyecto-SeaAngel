@{
	ViewData["Title"] = "Home Page";
	var notificationMessage = TempData["Mensaje"] as string;
}

<style>
	.actividades {
		margin: 10px;
		margin-bottom: 50px;
	}

	.card-hover {
		transition: box-shadow 0.3s ease-in-out, transform 0.2s ease-in-out;
		cursor: pointer;
		border-radius: 12px;
		overflow: hidden;
		position: relative;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
	}

		.card-hover:hover {
			box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
			transform: translateY(-5px);
		}

	.actividad-img {
		position: relative;
		width: 100%;
		height: 170px;
		overflow: hidden;
	}

		.actividad-img img {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: transform 0.4s ease-in-out;
		}

	.card-hover:hover .actividad-img img {
		transform: scale(1.1);
	}

	.overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.5);
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.actividad-nombre {
		color: white;
		font-size: 1.5rem;
		font-weight: bold;
		text-align: center;
	}

</style>
<div class="container-fluid p-0 mt-5">
	<div id="carouselE" class="carousel slide" data-bs-ride="carousel">
		<!-- Indicadores -->
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselE" data-bs-slide-to="0" class="active"
					aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselE" data-bs-slide-to="1"
					aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselE" data-bs-slide-to="2"
					aria-label="Slide 3"></button>
		</div>

		<!-- Contenido del carrusel -->

		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="@Url.Content("~/Images/crucero4.jpg")" class="d-block w-100 carousel-img"
					 alt="Imagen de Electrodomésticos">
				<div class="carousel-caption">
					<h5 class="animate__animated animate__backInLeft">Las mejores experiencias</h5>
					<p>
						Te ofrecemos una variada selección de experiencias a bordo, incluyendo una amplia gama de itinerarios
						en destinos exóticos, así como paquetes completos para disfrutar de vacaciones inolvidables en nuestros lujosos cruceros.
					</p>
					<a href="contacto.html"
					   class="btn btn-warning mt-3 animate__animated animate__backInRight animate__delay-6s">
						Nuestro contacto
					</a>
				</div>
			</div>

			<div class="carousel-item">
				<img src="@Url.Content("~/Images/crucero2.jpg")" class="d-block w-100 carousel-img"
					 alt="Imagen de Servicios">
				<div class="carousel-caption">
					<h5 class="animate__animated animate__backInLeft">Los mejores cruceros</h5>
					<p>
						Nos especializamos en ofrecer experiencias de crucero únicas que transformarán tus vacaciones en un viaje inolvidable.
					</p>
					<a href="contacto.html"
					   class="btn btn-warning mt-3 animate__animated animate__backInRight animate__delay-6s">
						Nuestro contacto
					</a>
				</div>
			</div>

			<div class="carousel-item">
				<img src="@Url.Content("~/Images/costa2.webp")" class="d-block w-100 carousel-img"
					 alt="Imagen de Ofertas">
				<div class="carousel-caption">
					<h5 class="animate__animated animate__backInLeft">Las mejores ofertas</h5>
					<p>
						Aprovecha nuestras ofertas exclusivas en paquetes de cruceros diseñados para mejorar tu experiencia a bordo
					</p>
					<a href="contacto.html"
					   class="btn btn-warning mt-3 animate__animated animate__backInRight animate__delay-6s">
						Nuestro contacto
					</a>
				</div>
			</div>
		</div>

		<!-- Controles de navegación -->
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselE" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>

		<button class="carousel-control-next" type="button" data-bs-target="#carouselE" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="section-header text-center pb-5 pt-5">
				<h2>TE OFRECEMOS</h2>
			</div>
		</div>
	</div>

	<div class="container-md">
		<div class="actividades">
			<div class="row g-1">
				@{
					var actividades = new[] {
				new { Imagen = "piscina.png", Titulo = "Piscina" },
				new { Imagen = "futbol.png", Titulo = "Campo de Fútbol" },
				new { Imagen = "voley.png", Titulo = "Vóley Playa" },
				new { Imagen = "spa.png", Titulo = "Spa y Relajación" },
				};
				}

				@foreach (var actividad in actividades)
				{
					<div class="col-lg-3 col-md-6">
						<div class="card card-hover shadow-lg rounded-3 h-100">
							<div class="actividad-img">
								<img src="@Url.Content("~/Images/Actividades/" + actividad.Imagen)" alt="@actividad.Titulo">
								<div class="overlay">
									<h5 class="actividad-nombre">@actividad.Titulo</h5>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>



	</div>

	<div class="text-center mt-3">
		<img src="@Url.Content("~/Images/header.png")" class="img-fluid" alt="Encabezado Actividades">
	</div>
</div>
