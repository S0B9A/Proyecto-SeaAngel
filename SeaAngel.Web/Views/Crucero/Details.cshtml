@model SeaAngel.Application.DTOs.CruceroDTO

@{
    ViewData["Title"] = "Detalle del Crucero";
}

<style>
    /* Contenedor principal */
    .contenedor-detalle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-top: 80px;
        padding: 20px;
    }

    .detalle-crucero {
        max-width: 1200px;
        width: 100%;
        background-color: #ffffff;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        border-radius: 12px;
        padding: 40px;
        border-top: 4px solid #0077B6;
        transition: all 0.3s ease;
    }

        .detalle-crucero:hover {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

    .crucero-img img {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .linea-decorativa {
        background: linear-gradient(to right, #0077B6, #00a8e8);
        height: 3px;
        width: 80px;
        margin: 12px 0;
        border-radius: 4px;
    }

    .btn-marine {
        background: linear-gradient(135deg, #0077B6, #005f8a);
        color: white;
        border-radius: 8px;
        padding: 14px 26px;
        font-weight: bold;
        text-transform: uppercase;
        border: none;
        transition: 0.3s;
        display: inline-block;
        text-decoration: none;
    }

        .btn-marine:hover {
            background: linear-gradient(135deg, #005f8a, #004b6b);
            transform: translateY(-2px);
        }

    .info-crucero h2 {
        color: #005f8a;
        font-weight: 700;
    }

    .dia-container {
        width: 40px;
        height: 40px;
        background-color: #0077B6;
        color: white;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .list-group-item {
        display: flex;
        align-items: center;
        background-color: #f1f9fc;
        border: none;
        border-left: 5px solid #0077B6;
        border-radius: 6px;
        padding: 12px 18px;
        margin-bottom: 10px;
        transition: 0.3s;
    }

        .list-group-item:hover {
            background-color: #e3f2fd;
        }

        .list-group-item strong {
            color: #005f8a;
            font-weight: 600;
        }

    .seccion-titulo {
        background: linear-gradient(to right, #0077B6, #00a8e8);
        color: white;
        padding: 10px 18px;
        border-radius: 6px;
        font-size: 1.2rem;
        font-weight: bold;
        text-align: center;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }

</style>

<div class="contenedor-detalle">
    <div class="detalle-crucero">
        <!-- Primera fila: Información general e imagen -->
        <div class="row align-items-center mb-4">
            <div class="col-md-6 info-crucero">
                <h2>@Model.Nombre</h2>
                <div class="linea-decorativa"></div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Cantidad de Días:</strong> @Model.CantDias días</li>
                    <li class="list-group-item"><strong>Barco:</strong> @(Model.IdbarcoNavigation?.Nombre ?? "No disponible")</li>
                </ul>
            </div>

            <div class="col-md-6 crucero-img text-center">
                @if (Model.Foto != null && Model.Foto.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" class="img-fluid rounded-3">
                }
                else
                {
                    <img src="https://via.placeholder.com/400x450?text=Sin+Imagen" class="img-fluid rounded-3" alt="Imagen no disponible">
                }
            </div>
        </div>

        <!-- Segunda fila: Itinerario y Fechas/Precios -->
        <div class="row">
            <div class="row">
                <div class="col-12">
                    <div class="seccion-titulo">Itinerario</div>
                    <ul class="list-group mt-2">
                        @foreach (var item in Model.Itinerario)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                <div class="dia-container">@item.Dia</div>
                                <div class="ms-3">
                                    <strong>Puerto:</strong> @item.IdpuertoNavigation.Nombre <br>
                                    <small class="text-muted">@item.Descripcion</small>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <!-- Fila para la Disponibilidad de Habitaciones -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="seccion-titulo">Disponibilidad de habitaciones</div>

                    @{
                        var fechasUnicas = Model.Fecha.Select(fp => fp.FechaInicio).Distinct().OrderBy(f => f);
                    }

                    @foreach (var fecha in fechasUnicas)
                    {
                        var f = Model.Fecha.FirstOrDefault(fp => fp.FechaInicio == fecha);
                        var fechaLimite = f.FechaLimitePago;

                        <div class="row align-items-center mt-4 border p-3 rounded shadow-sm">
                            <!-- Columna izquierda: Imagen y fechas -->
                            <div class="col-md-4 text-center">
                                <img src="@Url.Content("~/Images/calendar.png")" class="img-fluid rounded-3 mb-2" alt="Calendario" style="max-width: 150px;">
                                <h5 class="fw-bold" style="color: #0A1F44;">
                                    <strong>Desde:</strong> @fecha
                                </h5>
                                <h5 class="fw-bold" style="color: #0A1F44;">
                                    <strong>Hasta:</strong> @fechaLimite
                                </h5>
                                <a href="@Url.Action("Create", "EncReserva", new { idcrucero = Model.Id, idfecha = f.Id })" class="btn btn-marine">
                                    Reservar Ahora
                                </a>
                            </div>

                            <!-- Columna derecha: Tabla de habitaciones -->
                            <div class="col-md-8">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead style="background-color: #B3E0FF; color: #0A1F44;">
                                            <tr>
                                                <th>Habitación</th>
                                                <th>Descripción</th>
                                                <th>Precio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var fechaPrecio in Model.Fecha.Where(fp => fp.FechaInicio == fecha))
                                            {
                                                @foreach (var habitacion in fechaPrecio.FechaHabitacion)
                                                {
                                                    <tr>
                                                        <td >
                                                            <div class="d-flex align-items-center">
                                                                <i class="fas fa-bed text-primary me-2"></i>
                                                                <span class="flex-grow-1 text-center fw-medium">@habitacion.IdhabitacionNavigation.Nombre</span>
                                                            </div>
                                                        </td>
                                                        <td>@habitacion.IdhabitacionNavigation.Descripcion</td>
                                                        <td>₡@habitacion.Precio</td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>


        </div>
    </div>
</div>
