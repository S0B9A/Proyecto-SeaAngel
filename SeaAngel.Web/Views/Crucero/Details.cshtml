@model SeaAngel.Application.DTOs.CruceroDTO

@{
    ViewData["Title"] = "Detalle del Crucero";
}

<style>
    /* Contenedor principal */
    .contenedor-detalle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        margin-top: 80px;
        padding: 20px;
    }

    .detalle-crucero {
        max-width: 1200px;
        width: 100%;
        background-color: #ffffff;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        border-radius: 12px;
        padding: 40px;
        border-top: 4px solid #0077B6;
        transition: all 0.3s ease;
    }

        .detalle-crucero:hover {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }

    .crucero-img img {
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .linea-decorativa {
        background: linear-gradient(to right, #0077B6, #00a8e8);
        height: 3px;
        width: 80px;
        margin: 12px 0;
        border-radius: 4px;
    }

    .btn-marine {
        background: linear-gradient(135deg, #0077B6, #005f8a);
        color: white;
        border-radius: 8px;
        padding: 14px 26px;
        font-weight: bold;
        text-transform: uppercase;
        border: none;
        transition: 0.3s;
        display: inline-block;
        text-decoration: none;
    }

        .btn-marine:hover {
            background: linear-gradient(135deg, #005f8a, #004b6b);
            transform: translateY(-2px);
        }

    .info-crucero h2 {
        color: #005f8a;
        font-weight: 700;
    }

    .list-group-item {
        background-color: #f1f9fc;
        border: none;
        border-left: 5px solid #0077B6;
        border-radius: 6px;
        padding: 12px 18px;
        margin-bottom: 10px;
        transition: 0.3s;
    }

        .list-group-item:hover {
            background-color: #e3f2fd;
        }

        .list-group-item strong {
            color: #005f8a;
            font-weight: 600;
        }

    .seccion-titulo {
        background: linear-gradient(to right, #0077B6, #00a8e8);
        color: white;
        padding: 10px 18px;
        border-radius: 6px;
        font-size: 1.2rem;
        font-weight: bold;
        text-align: center;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="contenedor-detalle">
    <div class="detalle-crucero">
        <!-- Primera fila: Información general e imagen -->
        <div class="row align-items-center mb-4">
            <div class="col-md-6 info-crucero">
                <h2>@Model.Nombre</h2>
                <div class="linea-decorativa"></div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Cantidad de Días:</strong> @Model.CantDias días</li>
                    <li class="list-group-item"><strong>Barco:</strong> @(Model.IdbarcoNavigation?.Nombre ?? "No disponible")</li>
                </ul>
                <div class="mt-4">
                    <a href="@Url.Action("Reservar", "Crucero", new { id = Model.Id })" class="btn btn-marine">Reservar Ahora</a>
                </div>
            </div>

            <div class="col-md-6 crucero-img text-center">
                @if (Model.Foto != null && Model.Foto.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" class="img-fluid rounded-3">
                }
                else
                {
                    <img src="https://via.placeholder.com/400x450?text=Sin+Imagen" class="img-fluid rounded-3" alt="Imagen no disponible">
                }
            </div>
        </div>

        <!-- Segunda fila: Itinerario y Fechas/Precios -->
        <div class="row">
            <div class="col-md-6">
                <div class="seccion-titulo">Itinerario</div>
                <ul class="list-group mt-2">
                    @foreach (var item in Model.Itinerario)
                    {
                        <li class="list-group-item">
                            <strong>Puerto:</strong> @item.IdpuertoNavigation.Nombre <br>
                            <small class="text-muted">@item.Descripcion</small>
                        </li>
                    }
                </ul>
            </div>

            <div class="col-md-6">
                <div class="seccion-titulo">Fechas y Precios</div>
                <ul class="list-group mt-2">
                    @foreach (var fecha in Model.Fecha)
                    {
                        <li class="list-group-item">
                            <strong>Fecha de Inicio:</strong> @fecha.FechaInicio <br>
                            <small class="text-muted">@fecha.FechaLimitePago - </small>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
